<% if @configfile -%>
CONFIGFILE='<%= @configfile -%>'
<% end -%>
<% if @keytab != nil -%>
KEYTAB='FILE:<%= @keytab -%>'
<% end -%>
<% if @principal != nil -%>
PRINCIPAL='<%= @principal -%>'
<% end -%>
<% if @interval -%>
# interval to scan (seconds)
